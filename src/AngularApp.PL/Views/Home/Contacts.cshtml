@{
    ViewData["Title"] = "Contacts Page";
}
<h2>Create</h2>
<div ng-app="productsApp" ng-controller="productsController as parent">
    <form>
        <div class="form-horizontal">
            <h4>Add product</h4>
            <hr />

            <div class="form-group">
                <label class="control-label col-md-2">Name</label>
                <div class="col-md-3">
                    <input type="text" class="form-control" ng-model="Product.Name" placeholder="Name" />
                </div>
            </div>

            <div class="form-group" ng-controller="categoriesController as child">
                <label class="control-label col-md-2">Category</label>
                <div class="col-md-3">
                    <select  class="form-control" ng-model="Product.CategoryId">
                        <option ng-repeat="category in Categories" value="{{category.Id}}">{{category.Name}}</option>
                    </select>
                </div>
            </div>
            
            <div class="form-group">
                <label class="control-label col-md-2">Price</label>
                <div class="col-md-3">
                    <input type="number" class="form-control" ng-model="Product.Price" placeholder="Price" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Desc</label>
                <div class="col-md-3">
                    <input type="text" class="form-control" ng-model="Product.Description" placeholder="Description" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">IsAvailable</label>
                <div class="checkbox">
                    <label><input type="checkbox" ng-model="Product.IsAvailable" ng-true-value="1" ng-false-value="0"></label>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-3">
                    <input type="submit" class="btn btn-default" ng-click="add()" value="Add product">
                </div>
            </div>
        </div>
    </form>

    <h4>Content list</h4>
    <hr />
    <div class="panel">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>IsAvailable</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="product in Products">
                    <td>{{product.Name}}</td>
                    <td>{{product.Price}}</td>
                    <td>{{product.Description}}</td>
                    <td><input type="checkbox" ng-model="product.IsAvailable" /></td>
                    <td>{{product.CategoryName}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    <script src="~/app/productsApp.js"></script>
    <script src="~/app/services/productsServices.js"></script>
    <script src="~/app/services/categoriesServices.js"></script>
    <script src="~/app/controllers/productsController.js"></script>
    <script src="~/app/controllers/categoriesController.js"></script>
}